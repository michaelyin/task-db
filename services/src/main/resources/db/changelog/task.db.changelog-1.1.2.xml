<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

  <!-- Managing both DB that use sequences and db that use auto increment -->
  <property name="autoIncrement" value="true" dbms="mysql,mssql,h2,sybase,db2,hsqldb"/>
  <property name="autoIncrement" value="false" dbms="oracle,postgresql"/>

  <!-- Definition of TASK_PROJECTS table -->
  <changeSet author="qys" id="1.1.2-1">
    <createTable tableName="QYS_USER_SETTINGS">
      <column name="USERNAME" type="NVARCHAR(50)">
        <constraints primaryKey="true" primaryKeyName="PK_QYS_USER_SETTINGS" nullable="false"/>
      </column>
      <column name="SHOW_HIDDEN_PROJECT" type="BIT" defaultValue="0">
        <constraints nullable="true"/>
      </column>
      <column name="SHOW_HIDDEN_LABEL" type="BIT" defaultValue="0">
        <constraints nullable="true"/>
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci"/>
    </modifySql>
  </changeSet>

</databaseChangeLog>