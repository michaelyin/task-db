<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

  <!-- Managing both DB that use sequences and db that use auto increment -->
  <property name="autoIncrement" value="true" dbms="mysql,mssql,h2,sybase,db2,hsqldb"/>
  <property name="autoIncrement" value="false" dbms="oracle,postgresql"/>

  <!-- Definition of QYS_STANDARD table -->
  <changeSet author="qys" id="1.0.0-1">
    <createTable tableName="qys_national_policy">
      <column name="id" type="NVARCHAR(36)" >
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_QYS_NPOLICY" />
      </column>
      <column name="name" type="NVARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="num" type="NVARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="source" type="INTEGER">
        <constraints nullable="false"/>
      </column>
      <column name="type" type="INTEGER">
        <constraints nullable="false"/>
      </column>
      <column name="creator" type="NVARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="department" type="NVARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="txt_uuid" type="NVARCHAR(36)">
        <constraints nullable="true"/>
      </column>
      <column name="exp_uuid" type="NVARCHAR(36)">
        <constraints nullable="true"/>
      </column>
      <column name="create_t" type="TIMESTAMP">
        <constraints nullable="true"/>
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci"/>
    </modifySql>
  </changeSet>
  
  <!-- Definition of QYS_STAN_JCRFILE table -->
  <changeSet author="qys" id="1.0.0-2">
    <createTable tableName="qys_np_jcrfile">
      <column name="id" type="NVARCHAR(36)" >
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_QYS_NP_JCRFILE" />
      </column>
      <column name="uuid" type="NVARCHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="type" type="INTEGER">
        <constraints nullable="false"/>
      </column>
      <column name="url" type="NVARCHAR(60)">
        <constraints nullable="false"/>
      </column>
      <column name="file_name" type="NVARCHAR(60)">
        <constraints nullable="false"/>
      </column>
      <column name="upload_t" type="TIMESTAMP">
        <constraints nullable="true"/>
      </column>
      <column name="np_id" type="NVARCHAR(36)">
        <constraints nullable="false" foreignKeyName="FK_JCRFILE_NP_01" references="qys_national_policy(id)"/>
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci"/>
    </modifySql>
  </changeSet>
  
  <!-- Definition of qys_np_TAGS table -->
  <changeSet author="qys" id="1.0.0-3">
    <createTable tableName="qys_np_tag">
      <column name="id" type="NVARCHAR(36)" >
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_QYS_NP_TAG" />
      </column>
      <column name="np_id" type="NVARCHAR(36)">
        <constraints foreignKeyName="FK_NP_TAGS_NP_02" references="qys_national_policy(id)" nullable="false"/>
      </column>
      <column name="tag" type="NVARCHAR(50)">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci"/>
    </modifySql>
  </changeSet>

  <!-- Definition of QYS_USER_SETTINGS table -->
  <changeSet author="qys" id="1.0.0-4">
    <createTable tableName="QYS_USER_SETTINGS">
      <column name="USERNAME" type="NVARCHAR(50)">
        <constraints primaryKey="true" primaryKeyName="PK_QYS_USER_SETTINGS" nullable="false"/>
      </column>
      <column name="SHOW_HIDDEN_PROJECT" type="BIT" defaultValue="0">
        <constraints nullable="true"/>
      </column>
      <column name="SHOW_HIDDEN_LABEL" type="BIT" defaultValue="0">
        <constraints nullable="true"/>
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci"/>
    </modifySql>
</changeSet>
</databaseChangeLog>