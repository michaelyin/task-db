<?xml version="1.0" encoding="ISO-8859-1"?>

<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
               xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>org.exoplatform.commons.persistence.impl.EntityManagerService</type>
  </component>

  <component>
    <key>net.wyun.qys.service.UserService</key>
    <type>net.wyun.qys.service.impl.UserServiceImpl</type>
  </component>
  
  <component>
    <key>net.wyun.qys.dao.QysDAOHandler</key>
    <type>net.wyun.qys.dao.jpa.QysDAOHandlerJPAImpl</type>
  </component>
   <component>
    <key>net.wyun.qys.service.PolicyService</key>
    <type>net.wyun.qys.service.impl.PolicyServiceImpl</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.persistence.DataInitializer</target-component>
    <component-plugin>
      <name>TaskManagementChangeLogsPlugin</name>
      <set-method>addChangeLogsPlugin</set-method>
      <type>org.exoplatform.commons.persistence.impl.ChangeLogsPlugin</type>
      <init-params>
        <values-param>
          <name>changelogs</name>
          <description>Change logs of task management</description>
          <value>db/changelog/qys.db.policy.changelog-2.0.0.xml</value>
          <value>db/changelog/qys.db.stan.changelog-2.0.1.xml</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
